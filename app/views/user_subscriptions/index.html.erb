<div class="page-header"></div>
<h1><%='My Subscription'%></h1>
<table border = "1" class="table table-bordered table-striped">
  <tr>
    <th></th>
    <th>Email</th>
    <th>Phone</th>
    <th>Carrier</th>
    <th>Time</th>
    <th>Days</th>
    <th></th>
  </tr>
  <% @user_subscriptions.each do |user_subscription| %>
  <tr>
    <td>
      <%= link_to '<i class="icon-edit"></i> Edit'.html_safe, edit_user_user_subscription_path(current_user.id, user_subscription.id), :class => 'btn btn-success' %>
      <%= link_to '<i class="icon-remove"></i> Remove'.html_safe, user_user_subscription_path(current_user.id, user_subscription.id), method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-danger' %>      
    </td>
    <td><%= user_subscription.email %></td>
    <td><%= user_subscription.phone %></td>
    <td><%= Rails.configuration.phone_carriers[user_subscription.phone_carrier].name %></td>
    <td><%= user_subscription.readable_hour  %></td>
    <td><%= user_subscription.subscription_days %></td>
    <td><%= link_to '<i class="icon-circle-arrow-up"></i> Test'.html_safe, send_now_user_user_subscription_path(current_user.id, user_subscription.id), :class => 'btn btn-primary' %></td>    
  </tr>
  <% end %>
</table>
