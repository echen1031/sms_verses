<div class="page-header">
  <% if current_user and current_user.user_subscription.nil? %>
    <h1><%='Add Subscription'%></h1>
  <% else %>
    <h1><%='My Subscription'%></h1>
  <% end %>
</div>

  <% if current_user and current_user.user_subscription.nil? %>
    <%= link_to 'New Subscription', new_user_user_subscription_path(current_user.id), class: "btn btn-primary" %>
  <% end %>
  <hr>

    <table border = "1" class="table table-bordered table-striped">
      <% @user_subscriptions.each do |user_subscription| %>
          
          <tr>
            <th></th>
            <th>Email</th>
            <th>Phone</th>
            <th>Carrier</th>
            <th>Time</th>
            <th>Days</th>
          </tr>

    <td> <%= link_to '<i class="icon-edit"></i> Edit'.html_safe, edit_user_user_subscription_path(current_user.id, user_subscription.id), :class => 'btn btn-success' %>
            <td><%= user_subscription.email %></td>
            <td><%= user_subscription.phone %></td>
            <td><%= Rails.configuration.phone_carriers[user_subscription.phone_carrier].name %></td>
            <td><%= user_subscription.readable_time  %></td>
            <td><%= user_subscription.subscription_days %></td>
            <td><%= link_to '<i class="icon-circle-arrow-up"></i> Test'.html_safe, send_now_user_user_subscription_path(current_user.id, user_subscription.id), :class => 'btn btn-primary' %></td>
            <td><%= link_to '<i class="icon-remove"></i> Remove'.html_safe, user_user_subscription_path(current_user.id, user_subscription.id), method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-danger' %>      
    </td>
  </tr>
    </table>
  <% end %>    
